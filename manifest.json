{
  "manifest_version": 3,
  "name": "YouTube Random Extension",
  "version": "1.0",
  "description": "Adds a random video button on YouTube channel pages.",
  "permissions": [
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/channel/*",
        "https://www.youtube.com/c/*",
        "https://www.youtube.com/@*",
        "https://www.youtube.com/@*/featured",
        "https://www.youtube.com/@*/videos",
        "https://www.youtube.com/@*/playlists",
        "https://www.youtube.com/@*/community",
        "https://www.youtube.com/@*/about"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
